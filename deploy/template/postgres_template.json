{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "createMode": {
      "type": "string"
    },
    "administratorLogin": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "serverName": {
      "type": "string"
    },
    "skuCapacity": {
      "type": "int"
    },
    "skuFamily": {
      "type": "string"
    },
    "skuName": {
      "type": "string"
    },
    "skuSizeMB": {
      "type": "int"
    },
    "skuTier": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "backupRetentionDays": {
      "type": "int"
    },
    "geoRedundantBackup": {
      "type": "string"
    },
    "previewFeature": {
      "type": "string",
      "defaultValue": ""
    },
    "tags": {
      "type": "object",
      "defaultValue": {}
    },
    "storageAutoGrow": {
      "type": "string",
      "defaultValue": "Disabled"
    },
    "infrastructureEncryption": {
      "type": "string",
      "defaultValue": "Disabled"
    }
  },
  "resources": [
    {
      "apiVersion": "2017-12-01-preview",
      "kind": "",
      "location": "[parameters('location')]",
      "name": "[parameters('serverName')]",
      "properties": {
        "createMode": "[parameters('createMode')]",
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": {
          "reference": {
            "keyVault": {
              "id": "[resourceId('[resourceGroup().name]', 'Microsoft.KeyVault/vaults', 'doyourchoresvault')]"
            },
            "secretName": "doyourchoressecret"
          }
        },
        "version": "[parameters('version')]",
        "storageProfile": {
          "storageMB": "[parameters('skuSizeMB')]",
          "backupRetentionDays": "[parameters('backupRetentionDays')]",
          "geoRedundantBackup": "[parameters('geoRedundantBackup')]",
          "storageAutoGrow": "[parameters('storageAutoGrow')]"
        },
        "previewFeature": "[parameters('previewFeature')]",
        "infrastructureEncryption": "[parameters('infrastructureEncryption')]"
      },
      "sku": {
        "name": "[parameters('skuName')]",
        "tier": "[parameters('skuTier')]",
        "capacity": "[parameters('skuCapacity')]",
        "size": "[parameters('skuSizeMB')]",
        "family": "[parameters('skuFamily')]"
      },
      "tags": "[parameters('tags')]",
      "type": "Microsoft.DBforPostgreSQL/servers"
    }
  ]
}
